@editCategoryColorSchemeChange = (obj) ->
	foreground = "black"
	background = "white"
	name = "Default"
	<% ColorScheme.all.each do |cs| %>
	if obj.options[obj.selectedIndex].value == "<%= cs.id %>"
		foreground = "<%= cs.foreground %>"
		background = "<%= cs.background %>"
		name = "<%= cs.name %>"
	<% end %>
	
	$("#editCategoryColorSchemeExample").html name