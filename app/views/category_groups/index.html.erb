<% provide(:title, "Category Groups") %>
<h1>Listing category groups</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @category_groups.each do |category_group| %>
      <tr>
        <td><%= category_group.description %></td>
        <td><%= color_scheme_as_html_snippet_to_display(category_group.color_scheme) %></td>
        <td><%= link_to 'Edit', edit_category_group_path(category_group) %></td>
        <td><%= link_to 'Destroy', category_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category group', new_category_group_path %>
