<!DOCTYPE html>
<html>
  <head>
    <title><%= application_name %> | <%= yield(:title) %></title>
    <%= stylesheet_link_tag "application", media: "all",
                                           "data-turbolinks-track" => true %>
    <%= javascript_include_tag "https://js.stripe.com/v2/", "application", "data-turbolinks-track" => true %>
	<!-- <%= javascript_include_tag params[:controller] %> -->
	<%= yield :javascript_includes %>
    <%= csrf_meta_tags %>
	<%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
	<%= render 'layouts/shim' %>
	<% if not Rails.env.development? %>
		<%= render 'layouts/google_analytics' %>
	<% end %>

	<meta name="viewport" content="width=device-width, initial-scale=1.0">

  </head>
  <body>
      <div id="content" class="snap-content">
		  	<%= render 'layouts/header' %>

		    <div class="container" style="width:70%;">
				<table border="0" cellspacing="0" cellpadding="0">
					<tr>
						<td>
							<div class="marketing-article">
								<%= yield %>
							</div>
						</td>
						<td valign="top" style="padding-top:100px;">
							&nbsp;
							<% unless @hide_email_signup_form %>
								<%= form_tag articles_add_to_email_list_path do %>
									<%= label_tag "Keep me in the loop" %>
									<%= text_field_tag :email, params[:email], :placeholder => "I'm interested! (enter email)" %>
									<%= submit_tag "Lemme know!", :class => "btn btn-xs btn-primary" %>
								<% end %>
								<font size="small" style="color:gray;">(One-two emails per month)</font>
							<% end %>
							
							<p>
								&nbsp;<br/>
								<%= link_to "Or sign right up...", new_user_registration_path, :style => "text-decoration:underline;" %>
							</p>
							
						</td>
					</tr>
				</table>
				<%= render 'layouts/footer' %>
				<%= debug(params) if Rails.env.development? %>
		    </div>
			
	    </div>
  </body>
</html>